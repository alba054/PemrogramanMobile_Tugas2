<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141d26"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="BIODATA MAHASISWA SISFO"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15pt"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="112dp"
                android:layout_height="128dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:src="@drawable/me" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM : H071191040"
                android:textSize="10pt"
                android:textColor="#ffff"
                android:layout_marginTop="32dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : Muhammad Alif Sety Prakasa"
                android:textSize="10pt"
                android:textColor="#ffff"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TTL : Pontianak, 06 Oktober 2000"
                android:textSize="10pt"
                android:textColor="#ffff"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moto Hidup"
                android:textSize="10pt"
                android:textColor="#ffff"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be Tough !"
                android:textStyle="bold"
                android:textSize="10pt"
                android:textColor="#ffff"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#0D5898"
                android:layout_marginTop="16dp"
                android:text="Kembali ke beranda"
                android:textSize="12pt"
                android:onClick="toHome"/>

            <Button
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#0D5898"
                android:text="Artikel"
                android:layout_marginTop="16dp"
                android:textSize="12pt"
                android:onClick="toArticle"/>
        </LinearLayout>

</LinearLayout>
